# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#


# pnpm
export PNPM_HOME="/Users/pit/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end







# Alias
# ---
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# npm alias
alias nrd="npm run dev"
alias nrb="npm run build"
alias ni="npm install"
alias nu="npm uninstall"
alias nr="npm run"
alias nrp="npm run prisma:studio"
# git alias
alias gs="git status"
alias gcm="git commit -m"
alias gsp="git stash pop"


# nvm alias
alias nu="nvm use"
alias nl="nvm list"
alias ni="nvm install"

alias openzs="open ~/.zshrc"
alias sourcezs="source ~/.zshrc"

# directory alias
alias wrd='cd $HOME/workdir/Hit/FrontEnd_Monorepo'
alias wrq='cd $HOME/workdir/Hit/DartilQ'
alias wrt='cd $HOME/workdir/Hit/Test/FrontEnd_Monorepo'
alias wrs='cd $HOME/workdir/Hit/Stage/FrontEnd_Monorepo'
alias h='cd ~'

# pnpm alias

alias pa='pnpm add'
alias pr='pnpm remove'
alias pd='pnpm dev'
alias pb='pnpm build'
alias pt='pnpm test'
alias prs='pnpm run start'
alias pi='pnpm install'


# bun alias
alias ba='bun add'
alias br='bun remove'
alias bd='bun dev'
alias bb='bun build'
alias bt='bun test'
alias brs='bun run start'
alias bi='bun install'
# monod alias
alias mongod="sudo mongod --dbpath /System/Volumes/Data/data/db"

# alias code="open -a 'Visual Studio Code'"
alias ls="lsd --icon=always --group-dirs=first"
alias ll="lsd --icon=always --group-dirs=first -l"







export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion




# set an icon based on the distro
# make sure your font is compatible with https://github.com/lukas-w/font-logos
case $_distro in
    *kali*)                  ICON="ﴣ";;
    *arch*)                  ICON="";;
    *debian*)                ICON="";;
    *raspbian*)              ICON="";;
    *ubuntu*)                ICON="";;
    *elementary*)            ICON="";;
    *fedora*)                ICON="";;
    *coreos*)                ICON="";;
    *gentoo*)                ICON="";;
    *mageia*)                ICON="";;
    *centos*)                ICON="";;
    *opensuse*|*tumbleweed*) ICON="";;
    *sabayon*)               ICON="";;
    *slackware*)             ICON="";;
    *linuxmint*)             ICON="";;
    *alpine*)                ICON="";;
    *aosc*)                  ICON="";;
    *nixos*)                 ICON="";;
    *devuan*)                ICON="";;
    *manjaro*)               ICON="";;
    *rhel*)                  ICON="";;
    *macos*)                 ICON="";;
    *)                       ICON="";;
esac

export STARSHIP_DISTRO="$ICON"
export STARSHIP_DEVICE="$DEVICE"


# Set PATH
export PATH="/bin:/usr/bin:/usr/local/bin:/Applications/Visual Studio Code.app/Contents/Resources/app/bin:/Applications/Postgres.app/Contents/Versions/15/bin:/usr/sbin:$PATH"


# add bun to ~/.zshrc
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

source $(brew --prefix)/share/zsh-history-substring-search/zsh-history-substring-search.zsh
